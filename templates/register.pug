extends layout.pug 

block content
  .container
    .row 
      .col-sm-6
        .card.left-card
          form(action='/register', method='POST')
            h5.card-header 注册 新用户
              .card-body
                .mb-3
                  label.form-label(for='name') 用户名
                  input.form-control(type='text', placeholder='用户名', name='name', id='name')
                .mb-3
                  label.form-label(for='email') 邮箱
                  input.form-control(type='text', placeholder='邮箱', name='email', id='email')
                .mb-3
                  label.form-label(for='password') 密码
                  input.form-control(type='password', placeholder='密码', name='password', id='password')
                .mb-3
                  label.form-label(for='avatar') 头像
                  input.form-control(type='file', name='xavatar')
                  input.form-control(type='hidden', name='avatar')
                button.btn.btn-primary 注册
  script(src="/avatar.js") 